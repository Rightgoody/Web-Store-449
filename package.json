{
  "name": "web-store-449",
  "version": "1.0.0",
  "description": "A simple TypeScript-based store website",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"pnpm run db:start\" \"pnpm run backend:dev\" \"pnpm run dev\"",
    "dev:setup": "./scripts/dev-setup.sh",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d postgres",
    "backend:dev": "cd backend && pnpm run dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "migrate": "ts-node backend/src/scripts/migrate.ts"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
